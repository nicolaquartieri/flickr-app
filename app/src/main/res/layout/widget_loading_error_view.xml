<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/loading_error"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m2"
    android:paddingRight="@dimen/m2"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m4"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m2"
        android:gravity="center"
        android:text="@string/ops"/>

    <Button
        android:id="@+id/error_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again" />
</LinearLayout>